generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Media {
  id        String   @id @default(uuid())
  posterPath String  @map("poster_path")
  title     String
  tmdbId    String? @unique  @map("tmdb_id")
  TMDBLink  String?  @map("tmdb_link")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  matches     RoomMatch[]
  @@index([createdAt(sort: Desc), id])
  @@map("media")
}

model User {
  id          String @id @default(uuid())
  hostedRooms Room[] @relation("HostRooms")
  guestRooms  Room[] @relation("GuestRooms")

  // MVP v1: anonymous users (name nullable)
  // In v2: add email String? @unique for registered user login
  name        String?

  // Flag to distinguish anonymous and registered users
  isAnonymous Boolean @default(true) @map("is_anonymous")

  // In v2: add back for registered users:
  // email         String?   @unique
  // passwordHash  String?   @map("password_hash")
  // lastLoginAt   DateTime? @map("last_login_at")

  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@map("users")
}

model Room {
  id          String     @id @default(uuid())
  inviteCode  String     @unique @map("invite_code")
  status      RoomStatus @default(WAITING)

  hostId      String     @map("host_id")
  host        User       @relation("HostRooms", fields: [hostId], references: [id])

  guestId     String?    @map("guest_id")
  guest       User?      @relation("GuestRooms", fields: [guestId], references: [id])

  preferences Json?

  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")
  expiresAt   DateTime   @map("expires_at")

  // ONE-TO-ONE relation (for now)
  match       RoomMatch?

  @@index([status, expiresAt])
  @@map("rooms")
}

model RoomMatch {
  id        String   @id @default(uuid())

  roomId    String   @unique @map("room_id")
  room      Room?    @relation(fields: [roomId], references: [id], onDelete: SetNull)

  mediaId   String   @map("media_id")
  media     Media    @relation(fields: [mediaId], references: [id])

  matchedAt DateTime @default(now()) @map("matched_at")

  // Optional: metadata (can be added later)
  // swipesCount Int?
  // matchDurationMs Int?

  @@index([mediaId])      // For analytics
  @@index([matchedAt])    // For history
  @@map("room_matches")
}

enum RoomStatus {
  WAITING        // Waiting for the second user
  SELECTING      // Both users are selecting movies
  READY          // Both have selected, ready to swipe
  SWIPING        // Swiping is in progress
  MATCHED        // Found a match
  CANCELLED      // Someone left
}
